doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name='description', content='Un interesante front end para varios workloads')
  meta(name='author', content='Carlos')
  title Uchuva
  link(href='vendor/bootstrap/bootstrap.min.css', rel='stylesheet', media='screen')
  link(href='css/jumbotron-narrow.css', rel='stylesheet')  
  script(src='vendor/html5shiv.min.js')
  script(src='vendor/respond.min.js')
.container
  .header.clearfix
    nav
      ul.nav.nav-pills.pull-right
        if (user)
           li.active(role='presentation')
             a(href='/user')= __('Home')
        else
           li(role='presentation')
             a.btn.btn-success.text-success(href='/register')= __('Registro')
           li(role='presentation')
             a(href='/login')= __('Entrar')
    img#img-fluid(src='./logo.png', style="width: 15rem")
  .jumbotron
    img#img-fluid(src='./logo.png', style="width: 40rem")
    hr
    p(class="lead")= __('description')
    hr
    p
      a.btn.btn-lg.btn-success(href='/register', role='button')= __('Registro')
  .row.marketing
    .col-lg-6.mb-4      
      h4.text-success Workloaders
      p
        | #{__('Integración con HTCondor, Slurm, Torque y Openlava')}
      hr.text-warning
    .col-lg-6.mb-4
      h4.text-success.font-weight-bold Apps
      p
        | #{__('Numerosas aplicaciones pueden ser configuradas usando un formulario')}
      hr.text-warning
    .col-lg-6.mb-4
      h4.text-success SSH
      p #{__('Conexión SSH para sitios remotos')}
      hr.text-warning
    .col-lg-6.mb-4
      h4.text-success Archivo
      p
        | #{__('Todos los archivos en un solo lugar')}
      hr.text-warning
    .col-lg-6.mb-4
      h4.text-success Terminal
      p
        | #{__('Tienes a tu disposición una terminal virtual')}
      hr.text-warning
    .col-lg-6.mb-4
      h4.text-success Workflow
      p #{__('Modela tus experimentos usando grafos')}
      hr.text-warning
  footer.footer
    p © 2020.
