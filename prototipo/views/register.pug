extends layout

block content
  .container.text-center
    br
    br
    .row
      .col-lg-6.mb-4
        h1.text-success Registrarse en el portal
        h4 Investiga a tu gusto
        if(error)
          div.alert.alert-danger #{error}
        hr
        .row.text-center
          .col-lg-12
            form(role='form', action="/register",method="post")
              .form-group.row
                .col-lg-8.col-lg-offset-2
                  input.form-control(type='text', name="username", placeholder='Ingrese su Usuario', id='username')
              .form-group.row
                .col-lg-8.col-lg-offset-2
                  input.form-control(type='password', name="password", placeholder='Ingrese su Contrase√±a', id='password')
              a(href='/')
                button.btn.btn-secondary(type="button", style="margin-right: 5px") Salir
              button.btn.btn-success(type='submit', id="btn-login") Registrarse
      .col-lg-6(style="background-image: url('/reg_bg.jpg') ; background-size: cover ; height: 35rem; border-radius: 20px")

